@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" method="get" asp-controller="User" asp-action="Logout">
            </form>
            <button type="button" class="nav-link btn btn-link text-dark" data-bs-toggle="modal" data-bs-target="#confirm-logout">Logout</button>
            
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" method="get" asp-controller="User" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" method="get" asp-controller="User" asp-action="Register">Register</a>
        </li>
    }
</ul>